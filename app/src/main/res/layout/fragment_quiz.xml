<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/hijau"
    android:padding="16dp"
    tools:context=".QuizFragment">

    <Button
        android:id="@+id/btnSimplePastQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Simple Past Tense"
        android:textColor="@color/black"
        android:background="@drawable/tombol_roundedcorner"
        android:backgroundTint="@color/white"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/btnSimplePresentQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Simple Present Tense"
        android:textColor="@color/black"
        android:background="@drawable/tombol_roundedcorner"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnSimpleFutureQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Simple Future Tense"
        android:textColor="@color/black"
        android:background="@drawable/tombol_roundedcorner"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnPastContinuousQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Past Continuous Tense"
        android:background="@drawable/tombol_roundedcorner"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnPresentContinuousQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Present Continuous Tense"
        android:background="@drawable/tombol_roundedcorner"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnFutureContinuousQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. Future Continuous Tense"
        android:background="@drawable/tombol_roundedcorner"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

</LinearLayout>